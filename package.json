{
  "name": "exutile",
  "version": "0.1.0",
  "author": "Aashish Panchal <aipanchal51@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aashishpanchal/exutile.git"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.10",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "tsup": "^8.4.0",
    "typescript": "~5.5.4",
    "typescript-eslint": "^8.26.1"
  },
  "peerDependencies": {
    "express": "^4.21.2"
  },
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "description": "A utility library designed to simplify and enhance Express.js applications.",
  "engines": {
    "node": ">=22.13.1"
  },
  "files": [
    "dist",
    "LICENSE"
  ],
  "homepage": "https://github.com/aashishpanchal/exutile#readme",
  "keywords": [
    "proxy",
    "express",
    "exutile",
    "handler",
    "utility",
    "http-status",
    "http-errors",
    "asyncHandler"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.ts": [
      "bun run format",
      "bun run lint"
    ],
    "*.md": "prettier --list-different"
  },
  "packageManager": "bun@1.2.2",
  "scripts": {
    "build": "bun remove-dist && tsup src/index.ts --format cjs,esm --dts --clean",
    "lint": "eslint \"./src/**/*.{ts,js}\" --fix",
    "format": "prettier --write \"./src/**/*.{ts,js}\"",
    "release": "bun run build && npm publish",
    "remove-dist": "rimraf dist",
    "prepare": "husky"
  },
  "types": "dist/index.d.ts"
}
